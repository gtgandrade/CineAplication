<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gtg.cineaplication.PrincipalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:text="CINE INGRESSOS"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="207dp"
        app:srcCompat="@drawable/cinema" />

    <Button
        android:id="@+id/principal_btnFilmesCartaz"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:onClick="irParaActivityFilme"
        android:text="Filmes em Cartaz" />

    <Button
        android:id="@+id/principal_btnMeusIngressos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="irParaActivityIngressos"
        android:text="Meus Ingressos" />

    <Button
        android:id="@+id/principal_btnMap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="irParaActivityMap"
        android:text="Cinemas próximos" />

    <Button
        android:id="@+id/principal_btnConfiguracoes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="irParaActivityConfiguracoes"
        android:text="Configurações" />
</LinearLayout>
