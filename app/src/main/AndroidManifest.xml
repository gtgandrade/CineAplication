<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.gtg.cineaplication"
	>

	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.AppCompat.NoActionBar"
		>
		<activity android:name=".PrincipalActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
			<intent-filter>
				<action android:name="CINEAPPLICATION"/>

				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity android:name=".FilmeActivity"/>
		<activity android:name=".SessaoActivity"/>
		<activity android:name=".ResumoActivity"/>
		<activity android:name=".IngressosActivity"/>
		<activity android:name=".CadastroFilmeActivity"/>
		<activity android:name=".ConfiguracoesActivity"/>
	</application>

</manifest>